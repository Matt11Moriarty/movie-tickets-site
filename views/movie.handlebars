<div class="row">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">{{title}}</h1>
            <img src="{{imageLink}}" alt="{{title}} Image">
            <p>{{description}}</p>
            <ul>
            {{#each seats as |seat|}}
                <li data-id="{{id}}" data-isAvail="{{isAvailable}}">
                    {{seatNumber}}
                </li>
            {{/each}}
            </ul>
        </div>
    </div>
</div>